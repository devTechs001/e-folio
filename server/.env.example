# E-Folio Pro - Server Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=5000
NODE_ENV=development

# Client Configuration
CLIENT_URL=http://localhost:5173

# Database Configuration (Optional - app works without database)
MONGODB_URI=mongodb://localhost:27017/e-folio
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/efolio

# Authentication
JWT_SECRET=efolio_super_secret_key_change_in_production_2024
OWNER_EMAIL=devtechs842@gmail.com
OWNER_PASSWORD=pass1234

# Email Configuration (Optional - for sending collaboration invites)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Session Configuration
SESSION_SECRET=efolio_session_secret_2024
SESSION_TIMEOUT=86400000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Configuration (Optional - for AI Assistant)
OPENAI_API_KEY=your_openai_api_key_here

# File Upload (Optional - for media manager)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
